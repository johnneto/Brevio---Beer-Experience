@model IEnumerable<Brevio___Beer_Experience.Models.Cerveja>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nova Cerveja", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.abv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ibu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.srm)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.img)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.abv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ibu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.srm)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descricao)
        </td>
        <td>
           <img src="@Html.DisplayFor(modelItem => item.img)" height="150" />
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.id }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
